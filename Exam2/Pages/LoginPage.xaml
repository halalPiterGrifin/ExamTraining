<Page x:Class="Exam2.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Name="tbLogin" Grid.Row="0" VerticalAlignment="Bottom" ToolTip="Введите логин"/>
        <PasswordBox Name="pbPassword" Grid.Row="1" VerticalAlignment="Center" ToolTip="Введите пароль"/>
        <Button Name="btnEntry" Grid.Row="2" VerticalAlignment="Top" Content="Войти" Click="btnEntry_Click"/>
    </Grid>
</Page>
