<Window x:Class="Exam2.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam2.Windows"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Background="DarkSeaGreen"/>
        <Grid Background="Moccasin" Grid.Row="1"/>
        <Image Source="/Resources/canada.jpg" HorizontalAlignment="Left"/>
        <TextBlock Text="BattleBus" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="WhiteSmoke"/>
        <Frame Name="frmStart" NavigationUIVisibility="Hidden" ContentRendered="frmStart_ContentRendered"  Grid.Row="1"/>
        <Button Name="btnBack" Content="Вернуться" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btnBack_Click"/>
    </Grid>
</Window>
